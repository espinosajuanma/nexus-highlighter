{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "NEXUS",
  "scopeName": "source.nexus",
  "patterns": [
    { "include": "#comments" },
    { "include": "#matrix-block" },
    { "include": "#blocks" },
    { "include": "#keywords" },
    { "include": "#operators" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.block.nexus",
          "begin": "\\[",
          "end": "\\]"
        }
      ]
    },
    "matrix-block": {
      "name": "meta.block.matrix.nexus",
      "begin": "(?i)\\b(MATRIX)\\b",
      "beginCaptures": {
        "1": { "name": "keyword.control.matrix.nexus" }
      },
      "end": ";",
      "endCaptures": {
        "0": { "name": "punctuation.terminator.matrix.nexus" }
      },
      "patterns": [
        { "include": "#comments" },
        {
          "name": "meta.matrix.row.nexus",
          "match": "^\\s*('([^']*)'|([^\\s\\[\\];]+))",
          "captures": {
            "1": { "name": "entity.name.tag.taxon.nexus" }
          }
        },
        {
          "name": "string.seq.nucleotide.nexus",
          "match": "(?i)[ACGTURYMKWSBDHVN\\-\\?]"
        }
      ]
    },
    "blocks": {
      "patterns": [
        {
          "match": "(?i)\\b(BEGIN|END|EndBlock)\\s+([a-zA-Z0-9_]+)?;",
          "captures": {
            "1": { "name": "keyword.control.nexus" },
            "2": { "name": "entity.name.type.class.nexus" }
          }
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.other.nexus",
          "match": "(?i)\\b(DIMENSIONS|FORMAT|TAXLABELS|STATELABELS|CHARSTATELABELS|TREES|TRANSLATE|TREE|UTREE|PTREE|TAXA|CHARACTERS|ELIMINATE|ASSUMPTIONS|CODONS|SETS)\\b"
        },
        {
          "name": "storage.type.nexus",
          "match": "(?i)\\b(NTAX|NCHAR|DATATYPE|MISSING|GAP|SYMBOLS|EQUATE|MATCHCHAR|INTERLEAVE|TRANSPOSE|ID|VECTOR)\\b"
        },
        {
          "name": "constant.language.nexus",
          "match": "(?i)\\b(STANDARD|DNA|RNA|PROTEIN|CONTINUOUS|NO|YES)\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        { "name": "punctuation.terminator.nexus", "match": ";" },
        { "name": "keyword.operator.assignment.nexus", "match": "=" }
      ]
    }
  }
}